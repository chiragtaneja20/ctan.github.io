---
import Layout from '../layouts/Layout.astro';
import PaperCard from '../components/PaperCard.astro';
import { getCollection } from 'astro:content';

const papers = await getCollection('papers');
---

<Layout title="Papers - Himanshu">
  <h1>what i have been reading recently</h1>
  
  <section class="papers">
    <h2>papers</h2>
    <ul>
      {papers.map((paper) => (
        <PaperCard
          title={paper.data.title}
          status={paper.data.status}
          url={paper.data.url}
        />
      ))}
    </ul>
  </section>
</Layout>

<style>
  h1 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  h2 {
    color: var(--accent);
    margin-bottom: 1rem;
  }
  ul {
    list-style: none;
    padding: 0;
  }
</style>