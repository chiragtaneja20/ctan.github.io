---
import Layout from '../layouts/Layout.astro';

// Replace this URL with your Pinterest image URL
const imageUrl = "https://i.pinimg.com/474x/e9/46/ac/e946ac872743e5133947916bd1c99c3b.jpg";
---

<Layout title="404 - Page Not Found">
    <div class="error-container">
        <h1>404</h1>
        <p>oops! page not found</p>
        <img 
            src={imageUrl}
            alt="404 illustration" 
            class="error-image"
            loading="lazy"
            onerror="this.onerror=null; this.src='/fallback-image.jpg';"
        />
        <a href="/" class="home-link">go home â†’</a>
    </div>
</Layout>

<style>
    .error-container {
        text-align: center;
        padding: 2rem;
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 4rem;
        color: var(--accent);
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .error-image {
        max-width: 500px;
        width: 100%;
        height: auto;
        margin: 2rem 0;
        border-radius: 12px;
        object-fit: cover;
    }

    .home-link {
        display: inline-block;
        padding: 0.5rem 1rem;
        color: var(--accent);
        border: 2px solid var(--accent);
        border-radius: 9999px;
        text-decoration: none;
        transition: all 0.2s;
    }

    .home-link:hover {
        background: var(--accent);
        color: white;
    }
</style>
