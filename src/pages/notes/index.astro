---
import Layout from '../../layouts/Layout.astro';
import NoteCard from '../../components/NoteCard.astro';
import { getCollection } from 'astro:content';
import { SITE } from '../../config';

const notes = await getCollection('notes');
const sortedNotes = notes.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const groupedNotes = sortedNotes.reduce((acc, note) => {
  if (!acc[note.data.type]) {
    acc[note.data.type] = [];
  }
  acc[note.data.type].push(note);
  return acc;
}, {} as Record<string, typeof notes>);
---

<Layout title="notes and stuff - chirag">
  <h1>notes and stuff</h1>
  <!-- <p class="subtitle">what i have been reading recently</p> -->
  
  {SITE.workInProgress.notes ? (
    <p class="wip-message">{SITE.wipMessages?.notes || "ðŸŒ± Building my beautiful garden... stay tuned!"}</p>
  ) : (
    <div>
      {Object.entries(groupedNotes).map(([type, items]) => (
        <section class="notes-section">
          <h2>{type}s</h2>
          <ul class="notes-list">
            {items.map((note) => (
              <NoteCard
                title={note.data.title}
                type={note.data.type}
                status={note.data.status}
                url={note.data.url}
                hasNotes={note.data.hasNotes}
                slug={note.slug}
              />
            ))}
          </ul>
        </section>
      ))}
    </div>
  )}
</Layout>

<style>
  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .subtitle {
    color: #64748b;
    margin-bottom: 2rem;
  }
  .wip-message {
    color: #64748b;
    font-style: italic;
  }
  .notes-section {
    margin-bottom: 3rem;
  }
  h2 {
    color: var(--accent);
    margin-bottom: 1rem;
    text-transform: capitalize;
  }
  .notes-list {
    list-style: none;
    padding: 0;
  }
</style>
