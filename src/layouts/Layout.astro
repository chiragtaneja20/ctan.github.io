---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
const faviconUrl = 'https://i.pinimg.com/564x/6f/e1/d0/6fe1d074ab0c081b5291d17ff88e3f03.jpg';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="chirag's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href={faviconUrl} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="home-link" transition:animate="slide">å…‰</a>
				<div class="nav-links">
					<a href="/notes" transition:animate="slide">Notes</a>
					<a href="/blog" transition:animate="slide">Blog</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: #22c55e;
		--background: #ffffff;
		--text: #0f172a;
		--nav-bg: #ffffff;
		--card-bg: #f1f5f9;
		--border-color: #e2e8f0;
		--text-muted: #64748b;
	}

	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}

	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
	}

	nav {
		border-bottom: 1px solid var(--border-color);
		padding: 1rem;
		background: var(--nav-bg);
	}

	.nav-content {
		max-width: 800px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.home-link {
		font-size: 1.2rem;
		font-weight: bold;
		color: var(--accent);
		text-decoration: none;
	}

	a {
		color: var(--text);
		text-decoration: none;
	}

	a:hover {
		color: var(--accent);
	}

	main {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}
</style>
